 pipeline {
    agent any 
    stages{
        
       stage('Checkout') {
         steps {
         sh 'echo passed'
        git branch: 'main', url: 'https://github.com/vishwanath0303/Jenkins-Zero-To-Hero.git'
      }
    }
    stage('Build and Test') {
      steps {
        sh 'ls -ltr'
        // build the project and create a JAR file
        sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && mvn clean install'
      }
    }
      stage('Sonar-Analysis') {
            steps {
                sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && mvn clean package'
                sh ''' mvn sonar:sonar  -Dsonar.url=http://51.20.103.155:9000/ -Dsonar.login=squ_e2dc889533bb95076575b6a3b31bc2c624a8db1c  -Dsonar.projectName=Jenkins-Zero-To-Hero \
                    -Dsonar.java.binaries=. \
                    -Dsonar.projectKey=Jenkins-Zero-To-Hero '''
            }
     }
     stage('Build docker image'){
            steps{
                script{
                  sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app  && docker build -t abhishek:$BUILD_NUMBER .'
            }
       }
      }
        
      stage('Start image'){
            steps{
                 script{
                  
                     sh 'docker run -d -p 8082:8080 --name abhishek abhishek:$BUILD_NUMBER '          
             }
           }
          }
}
}
